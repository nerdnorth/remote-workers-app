- content_for :js do
  :javascript

    $(document).ready(function() {
      var softwareDevelopment = $('.software-development-tags');
      var customerSupport = $('.customer-support-tags');
      var design = $('.design-tags');

      function showFor(skill) {
        if(skill == "software-development") {
          softwareDevelopment.show();
          customerSupport.hide();
          design.hide()
        }
        else if(skill == 'customer-support') {
          softwareDevelopment.hide();
          customerSupport.show();
          design.hide()
        }
        else if(skill == 'design') {
          softwareDevelopment.hide();
          customerSupport.hide();
          design.show()
        }
      }

      $('input[type="radio"][data-behavior="job-opportunities-click"]').click(function(evt) {
        showFor($(this).val())
      });

      showFor('#{@person.job_opportunities}');
    });
